<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2e5"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btnSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:width="0dp"
            android:height="32sp"
            android:background="@android:color/transparent"
            android:drawablePadding="0dp"
            android:paddingStart="0dp"
            android:paddingTop="4dp"
            android:paddingEnd="0dp"
            android:paddingBottom="4dp"
            android:text="Sair"
            android:textAlignment="textStart"
            android:textColor="#3a462e"
            android:typeface="sans"
            app:cornerRadius="8dp"
            app:icon="@drawable/baseline_arrow_back_24"
            app:iconTint="#3a462e"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnExtrato"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            android:height="160dp"
            android:backgroundTint="#d4da7b"
            android:firstBaselineToTopHeight="100dp"
            android:text="Ver\nextrato"
            android:textAlignment="textStart"
            android:textColor="#3a462e"
            android:textDirection="locale"
            android:textSize="16dp"
            android:textStyle="normal"
            android:typeface="sans"
            app:cornerRadius="16dp"
            app:icon="@drawable/baseline_assessment_24"
            app:iconGravity="end"
            app:iconSize="40dp"
            app:iconTint="#3a462e"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnOperacao"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#ADB165"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/btnOperacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:height="160dp"
            android:backgroundTint="#bbbd95"
            android:firstBaselineToTopHeight="100dp"
            android:text="Nova\noperação"
            android:textAlignment="textStart"
            android:textColor="#3a462e"
            android:textDirection="locale"
            android:textSize="16dp"
            android:textStyle="normal"
            android:typeface="sans"
            app:cornerRadius="16dp"
            app:icon="@drawable/baseline_monetization_on_24"
            app:iconGravity="end"
            app:iconSize="40dp"
            app:iconTint="#3a462e"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnExtrato"
            app:strokeColor="#989976"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Olá!"
            android:textAlignment="textStart"
            android:textSize="28dp"
            app:layout_constraintStart_toStartOf="@+id/btnSair"
            app:layout_constraintTop_toBottomOf="@+id/btnSair" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Continue assim!\nAnote seus gastos todos os dias"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ProgressBar
            android:id="@+id/progressBarGoal1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:max="100"
            android:progress="40"
            android:progressTint="#768e52"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewGoal1" />

        <TextView
            android:id="@+id/textViewGoal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Viagem para Buenos Aires"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textViewNumberGoal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40%"
            android:textColor="#768e52"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/progressBarGoal1"
            app:layout_constraintTop_toTopOf="@+id/textViewGoal1" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Settings button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_settings_24"
            app:tint="#3a462e" />

        <TextView
            android:id="@+id/textViewGoal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Nintendo Switch 2"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBarGoal1" />

        <ProgressBar
            android:id="@+id/progressBarGoal2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:progress="10"
            android:progressTint="#768e52"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewGoal2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            android:textColor="#768e52"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/progressBarGoal2"
            app:layout_constraintTop_toTopOf="@+id/textViewGoal2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="60dp"
            android:text="Meus objetivos"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>